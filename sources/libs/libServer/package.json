{
  "name": "@dmitry-n-medvedev/libserver",
  "version": "0.0.0",
  "description": "[lib] server implementation",
  "engines": {
    "node": "=15.5.1",
    "pnpm": "=5.15.0"
  },
  "engineStrict": true,
  "main": "./libServer.ts",
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./ --ext .ts --quiet --fix",
    "build": "tsc",
    "test": "cross-env NODE_ENV=test NODE_DEBUG=LIB_SERVER,FN_HANDLE_DIRECTION,specs TS_NODE_PROJECT=../../../tsconfig.testing.json ./node_modules/.bin/c8 ./node_modules/.bin/mocha -r ts-node/register -- --trace-warnings",
    "coverage": "./node_modules/.bin/c8 report --reporter=text-lcov > ./coverage/coverage.lcov && ./node_modules/.bin/codecov --disable=gcov"
  },
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@dmitry-n-medvedev/libcommon": "workspace:^0.0.0",
    "@dmitry-n-medvedev/libdirectioncalculator": "workspace:^0.0.0",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v18.13.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-proposal-async-generator-functions": "^7.12.12",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/runtime": "^7.12.5",
    "babel-eslint": "^10.1.0",
    "c8": "^7.4.0",
    "chai": "^4.2.0",
    "codecov": "^3.8.1",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "got": "^11.8.1",
    "mocha": "^8.2.1",
    "nanoid": "^3.1.20",
    "node-fetch": "^2.6.1"
  },
  "mocha": {
    "allow-uncaught": false,
    "async-only": true,
    "bail": true,
    "check-leaks": true,
    "exit": true,
    "forbid-only": false,
    "forbid-pending": true,
    "slow": 50,
    "timeout": 1000,
    "color": true,
    "diff": true,
    "full-trace": true,
    "growl": false,
    "inline-diffs": true,
    "reporter": "spec",
    "no-config": true,
    "no-opts": true,
    "spec": [
      "**/specs/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix"
    ]
  }
}
